{
  extends: ["config:recommended"],
  timezone: "Europe/Paris",
  schedule: ["before 4am on Monday"],
  onboarding: true,
  dependencyDashboard: true,
  prHourlyLimit: 2,
  prConcurrentLimit: 5,
  semanticCommits: "enabled",
  semanticCommitType: "chore",
  labels: ["dependencies", "renovate"],
  minimumReleaseAge: "3 days",
  rangeStrategy: "bump",
  commitBody: "This PR was generated by Renovate.",
  lockFileMaintenance: {
    enabled: true,
    schedule: ["before 3am on Tuesday"],
  },
  packageRules: [
    {
      matchManagers: ["maven"],
      matchUpdateTypes: ["patch", "minor"],
      groupName: "üîß Java patch & minor updates",
      automerge: true,
      automergeType: "branch",
    },
    {
      matchManagers: ["maven"],
      matchUpdateTypes: ["major"],
      groupName: "‚ö†Ô∏è Java major updates",
      automerge: false,
      reviewers: ["@your-team-lead"],
      schedule: ["after 6pm on Friday"],
    },
    {
      groupName: "üå± Spring Boot BOM & starters",
      matchUpdateTypes: ["patch", "minor", "major"],
      automerge: false,
      reviewers: ["@spring-team"],
      schedule: ["before 2am on Wednesday"],
      matchPackageNames: ["/^org\\\\.springframework\\\\.boot/"],
    },
    {
      matchManagers: ["dockerfile"],
      groupName: "üê≥ Docker images",
      extends: ["schedule:daily"],
    },
    {
      matchManagers: ["github-actions"],
      groupName: "ü§ñ GitHub Actions",
      extends: ["schedule:daily"],
    },
  ],
  ignorePaths: ["**/dist/**", "**/build/**", "**/target/**"],
}
