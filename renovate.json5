{
  "extends": ["config:base"],
  "timezone": "Europe/Paris",
  "schedule": ["before 4am on Monday"],
  "onboarding": true,
  "dependencyDashboard": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "semanticCommits": true,
  "semanticCommitType": "chore",
  "labels": ["dependencies", "renovate"],
  "stabilityDays": 3,
  "rangeStrategy": "bump",
  "commitBody": "This PR was generated by Renovate.",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Tuesday"]
  },
  "packageRules": [
    {
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "üîß Java patch & minor updates",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["major"],
      "groupName": "‚ö†Ô∏è Java major updates",
      "automerge": false,
      "reviewers": ["@h00dieB0y"]
      "schedule": ["after 6pm on Friday"]
    },
    {
      "matchPackagePatterns": ["^org\\.springframework\\.boot"],
      "groupName": "üå± Spring Boot BOM & starters",
      "matchUpdateTypes": ["patch", "minor", "major"],
      "automerge": false,
      "reviewers": ["@h00dieB0y"]
      "schedule": ["before 2am on Wednesday"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "üê≥ Docker images",
      "schedule": ["daily"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "ü§ñ GitHub Actions",
      "schedule": ["daily"]
    }
  ],
  "ignorePaths": ["**/dist/**", "**/build/**", "**/target/**"]
}
